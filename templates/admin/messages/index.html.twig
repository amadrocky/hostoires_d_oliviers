{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Messages
{% endblock %}

{% block content %}
	<h1>Messages</h1>

	<div class="table">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>id</th>
					<th>Nom</th>
					<th>Objet</th>
                    <th>email</th>
                    <th>Message</th>
					<th>Date</th>
				</tr>
			</thead>
			<tbody>
				{% for message in messages %}
					<tr>
						<td>{{ message.id }}</td>
                        <td>{{ message.name }}</td>
                        <td>{{ message.object.name }}</td>
                        <td>{{ message.email }}</td>
						<td>{{ message.message }}</td>
						<td>{{ message.createdAt|date('d-m-Y H:i') }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
