{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block content %}
	<h1>Produits</h1>
	<div class="table">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>id</th>
					<th>Nom</th>
					<th>Catégorie</th>
					<th>Taxe</th>
					<th>Description main</th>
					<th>Prix</th>
					<th>Image principale</th>
					<th>Date de création</th>
					<th>Date de modification</th>
					<th>Quantité</th>
					<th>Statut</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
            {% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.category.name }}</td>
					<td>{{ product.tax.name }}</td>
					<td>{{ product.mainDescription }}</td>
					<td>{{ (product.price / 100)|number_format(2, ',') }} €</td>
					<td>{{ product.name }}</td>
					<td>{{ product.createdAt|date('d-m-Y') }}</td>
					<td>{{ product.modifiedAt|date('d-m-Y') }}</td>
					<td>{{ product.quantity }}</td>
					<td><span class="badge rounded-pill bg-primary">{{ product.workflowState }}</span></td>
					<td><a href="" class="btn btn-primary"><i class="fas fa-eye"></i></a></td>
				</tr>
                {% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
