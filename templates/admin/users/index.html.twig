{% extends 'admin/adminLayout.html.twig' %}

{% block title %}Utilisateurs
{% endblock %}

{% block content %}
	<h1>Utilisateurs</h1>

	<div class="table">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>id</th>
					<th>Nom</th>
					<th>Prénom</th>
                    <th>email</th>
                    <th>Téléphone</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.phoneNumber }}</td>
						<td>
							<a href="" class="btn btn-outline-dark">
								<i class="fas fa-eye"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
